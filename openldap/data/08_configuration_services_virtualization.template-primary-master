sstSelfService: FALSE

# This is where the user uploads his or her ISO-files into the FOSS-Cloud environment. 
dn: ou=iso-choosable,ou=storage pools,ou=configuration,ou=virtualization,ou=services,dc=foss-cloud,dc=org
objectclass: top
objectclass: organizationalUnit
objectclass: sstStoragePoolConfigurationObjectClass
ou: iso-choosable
sstStoragePoolURI: file:///var/virtualization/iso-choosable/
sstStoragePoolType: iso-choosable
sstSelfService: FALSE

